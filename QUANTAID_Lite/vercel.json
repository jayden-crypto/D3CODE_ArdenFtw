{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "nodeVersion": "20.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(?<path>.+)",
      "dest": "/api/$path"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend"
    }
  ]
}
